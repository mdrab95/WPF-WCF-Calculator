    </Style>


    <Style TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="24"/>
        <Style.Triggers>
            <Trigger Property="TextBox.IsMouseOver" Value="False">
                <Setter Property="BorderBrush" Value="#e0e0f7" />
                <Setter Property="BorderThickness" Value="2" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>